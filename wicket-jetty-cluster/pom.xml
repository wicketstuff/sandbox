			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<issueManagement>
		<url>http://sourceforge.net/tracker/?group_id=134391</url>
	</issueManagement>

	<scm>
		<connection>
			scm:svn:http://svn.sourceforge.net/wicket-stuff/trunk/wicket-jetty-cluster
		</connection>
		<developerConnection>
			scm:svn:https://svn.sourceforge.net/wicket-stuff/trunk/wicket-jetty-cluster
		</developerConnection>
		<url>
			http://svn.sourceforge.net/viewcvs.py/wicket-stuff/trunk/wicket-jetty-cluster
		</url>
	</scm>

	<mailingLists>
		<mailingList>
			<name>Wicket Announcements List</name>
			<subscribe>
				http://lists.sourceforge.net/mailman/listinfo/wicket-announce
			</subscribe>
			<unsubscribe>
				http://lists.sourceforge.net/mailman/listinfo/wicket-announce
			</unsubscribe>
			<archive>
				http://sourceforge.net/mailarchive/forum.php?forum=wicket-announce
			</archive>
		</mailingList>
		<mailingList>
			<name>Wicket User List</name>
			<subscribe>
				http://lists.sourceforge.net/mailman/listinfo/wicket-user
			</subscribe>
			<unsubscribe>
				http://lists.sourceforge.net/mailman/listinfo/wicket-user
			</unsubscribe>
			<archive>
				http://sourceforge.net/mailarchive/forum.php?forum=wicket-user
			</archive>
		</mailingList>
		<mailingList>
			<name>Wicket Development List</name>
			<subscribe>
				mailto:wicket-dev-subscribe@incubator.apache.org
			</subscribe>
			<unsubscribe>
				mailto:wicket-dev-unsubscribe@incubator.apache.org
			</unsubscribe>
